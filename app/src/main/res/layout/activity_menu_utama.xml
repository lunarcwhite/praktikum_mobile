<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUtama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_status"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/card_simulasi"
            android:layout_alignBottom="@id/card_simulasi"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="-200dp"
            android:layout_marginBottom="-223dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="34sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_simulasi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@id/card_profile"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="-386dp"
            android:layout_toStartOf="@id/card_status"
            android:foregroundGravity="top|center" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="94dp"
                android:layout_height="99dp"
                android:text="Simulasi"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@id/card_profile"
            android:layout_marginTop="-153dp"
            android:layout_marginRight="-387dp"
            android:layout_marginBottom="-355dp"
            android:layout_toLeftOf="@id/card_status">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#E91E63"
                android:text="Logout" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="-351dp"
            android:layout_marginRight="-286dp"
            android:layout_toRightOf="@id/card_simulasi">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>